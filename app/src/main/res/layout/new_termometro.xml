<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="180dp"
    android:tag="termometro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">


            <com.example.titaniwmbluetoothcontrol.Termometro
                android:id="@+id/termometro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                app:innerColor="@android:color/holo_red_light"
                app:middleColor="@android:color/holo_blue_light"
                app:outerColor="@android:color/holo_blue_dark"
                app:radius="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_drag_termometro"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="45dp"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>