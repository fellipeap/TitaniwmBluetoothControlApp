<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setup_new_contagiros"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayout462"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViererw531875"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/holo_orange_light"
                        android:text="Nome:"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/teer371"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/holo_orange_light"
                        android:text="Regex Inicio:"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView1adsj62"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/holo_orange_light"
                        android:text="Regex Fim:"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViererw53187"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/holo_orange_light"
                        android:text="Tipo:"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/eTNomeContaGiros"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="CT 1"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/eTRegexInicioContaGiros"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="p"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/eTRegexFimContaGiros"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="#"
                        android:textAlignment="center" />

                    <Spinner
                        android:id="@+id/cBContaGiros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textView5420"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pré-Vizualização"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark" />

            <LinearLayout
                android:id="@+id/are_vizualizacao_contagiros"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btnCriarNewContaGiros"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:background="@color/colorPrimaryDark"
                android:text="Criar"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>